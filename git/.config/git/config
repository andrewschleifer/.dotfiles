[user]
	name = Andrew Schleifer
	email = me@andrewschleifer.name
[alias]
	amend = commit --amend
	bl = blame -w -M
	cherrypick = cherry-pick
	ci = commit
	co = checkout
	cp = cherry-pick
	detach = checkout HEAD^0
	df = diff
	dt = difftool
	grp = grep
	grpe = grep
	l = log --all --graph --date-order --full-history --pretty=format:'%C(dim blue)%h %C(reset)%s%C(cyan)%d'
	lu = log -p -c
	mt = mergetool
	pl = pull --ff-only
	st = status -sb
	stashpop = stash pop
	t = tag -n1
	tpull = pull
	tpush = push
	w = whatchanged
	unstage = reset HEAD
[branch]
	autosetupmerge = true
[color]
	ui = true
[core]
	quotepath = false
	editor = /usr/bin/vim
	abbrev = 12
[diff]
	algorithm = histogram
	renames = copies
	mnemonicprefix = true
	submodule = log
	tool = Kaleidoscope
[difftool]
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[log]
	date = iso
	mailmap = true
[merge]
	keepBackup = false
	tool = Kaleidoscope
[mergetool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[push]
	default = current
[rebase]
	autosquash = true
[status]
	showUntrackedFiles = all
