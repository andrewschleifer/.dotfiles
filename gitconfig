[user]
    name = Andrew Schleifer
    email = me@andrewschleifer.name
[alias]
    amend = commit --amend
    bl = blame -w -M
    cherrypick = cherry-pick
    ci = commit
    co = checkout
    detach = checkout HEAD^0
    dt = difftool
    l = log --all --decorate --oneline --graph --date-order
    ll = log --no-merges
    lu = log --no-merges -u
    mt = mergetool
    st = status -sb
    t = tag -n1
    w = whatchanged
    unstage = reset HEAD
[branch]
    autosetupmerge = true
[color]
    ui = true
[core]
    excludesfile = "~/.dot/gitignore"
    quotepath = false
[diff]
    tool = Kaleidoscope
    renames = copies
    mnemonicprefix = true
[difftool]
    prompt = false
[difftool "FileMerge"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[difftool "GitX"]
    cmd = git diff \"$LOCAL\" \"$REMOTE\" | gitx
[difftool "SourceTree"]
    cmd = /Users/schleifer/Applications/Kaleidoscope.app/Contents/MacOS/ksdiff -w \"$LOCAL\" \"$REMOTE\"
    path = 
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
    tool = Kaleidoscope
[mergetool]
    prompt = false
    keepBackup = true
[mergetool "FileMerge"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\" -merge \"$REMOTE\"
    keepBackup = false
    trustExitCode = false
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true
[mergetool "SourceTree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
